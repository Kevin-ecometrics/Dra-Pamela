---
import Layout from "@layouts/Layout.astro";
import Hero from "@components/UI/blog/Hero.astro";
import Navbar from "@components/UI/blog/Navbar.astro";
import Blog1 from "@components/UI/blog/Blog1.astro";
import Blog2 from "@components/UI/blog/Blog2.astro";
import Blog3 from "@components/UI/blog/Blog3.astro";
import Footer from "@components/UI/Footer.astro";
export function getStaticPaths() {
  return [
    { params: { blog: "secretos-de-una-rinoplastia-exitosa" } },
    { params: { blog: "mirada-renovada-blefaroplastia-y-sus-beneficios" } },
    {
      params: {
        blog: "la-ciencia-del-rejuvenecimiento-facial-tratamientos-no-quirurgicos",
      },
    },
  ];
}

const { blog } = Astro.params;
const title = blog.replace(/-/g, " ");
---

<Layout title={`Blog de: ${blog}`}>
  <Navbar />
  <Hero className="bg-[#798672] h-64 flex justify-center items-center">
    <h1 class="text-center text-white text-5xl lg:text-7xl font-prata">Blog</h1>
  </Hero>
  {
    blog === "secretos-de-una-rinoplastia-exitosa" ? (
      <>
        <Blog1 title={title} />
        <Footer />
      </>
    ) : blog === "mirada-renovada-blefaroplastia-y-sus-beneficios" ? (
      <>
        <Blog2 title={title} />
        <Footer />
      </>
    ) : blog ===
      "la-ciencia-del-rejuvenecimiento-facial-tratamientos-no-quirurgicos" ? (
      <>
        <Blog3 title={title} />
        <Footer />
      </>
    ) : (
      <script>window.location.href = "/404.html";</script>
    )
  }
</Layout>
