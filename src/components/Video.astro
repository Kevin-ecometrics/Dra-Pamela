---
import { Image } from "astro:assets";

import catalog from "@assets/catalog.png";
import catalog2 from "@assets/catalog2.png";
import catalog3 from "@assets/catalog3.png";
import Instagram from "@components/icons/instagram.astro";
import Facebook from "@components/icons/Facebook.astro";
import TikTok from "@components/icons/tiktok.astro";
import Fondo from "@assets/background_image7.png";
import Fondo2 from "@assets/background_image8.png";
import Fondo3 from "@assets/background_image9.png";
---

<style>
  body {
    margin: 0;
    text-align: center;
    font-family: "Poppins", sans-serif;
  }

  .container {
    display: flex;
    flex-wrap: wrap;
    gap: clamp(1rem, 3vw, 3rem);
    padding: 0.5rem;
  }

  .iphone-case {
    --border-radius-outer: 2rem;
    --outer-padding: 0.5rem;
    --case-color: #000000; /* Nuevo color del caso */
    box-shadow: 0px 0px 0px 2px rgba(0, 0, 0, 0.2); /* Cambio en la sombra */
    background-color: var(--case-color);
    border-radius: var(--border-radius-outer);
    padding: var(--outer-padding);
    width: min(250px);
    aspect-ratio: 1/2;
    position: relative;
    margin-inline: auto;
  }

  .iphone-case > div {
    --start-color: #000;
    --shadow-x: 2px;
    height: 50%;
    border-radius: 50%;
    background-color: var(--base-color, #a7a1a6);
    box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.2); /* Cambio en la sombra */
    background-size: 100% 200%;
  }

  .iphone-case:before {
    content: "";
    position: absolute;
    top: 1rem;
    left: 50%;
    transform: translateX(-50%);
    height: 1.3rem;
    background-color: var(--case-color);
    width: 22%;
    border-radius: 25px;
  }

  .iphone-case.case-2 {
    --border-radius-outer: 2rem;
    --outer-padding: 0.5rem;
    --case-color: #000000; /* Nuevo color del caso */
    box-shadow: 0px 0px 0px 2px rgba(0, 0, 0, 0.2); /* Cambio en la sombra */
    background-color: var(--case-color);
    border-radius: var(--border-radius-outer);
    padding: var(--outer-padding);
    width: min(250px);
    aspect-ratio: 1/2;
    position: relative;
    margin-inline: auto;
  }
</style>

<!-- primera section -->
<div class="grid grid-cols-1 lg:grid-cols-2 py-8">
  <Image src={Fondo} alt="Catalog" class="rounded-3xl absolute" />

  <div class="iphone-case case-1">
    <video src="/posts.webm" class="h-[500px] rounded-3xl" autoplay muted
    ></video>
  </div>
  <div class="translate-x-80 lg:block hidden">
    <Image
      src={Fondo2}
      alt="Catalog"
      class="rounded-3xl absolute translate-x-[-120px] translate-y-72"
    />
    <Image
      src={Fondo3}
      alt="Catalog"
      class="rounded-3xl absolute translate-x-36 translate-y-40"
    />
    <Image src={catalog} alt="Catalog" class="rounded-3xl absolute" />
    <Image
      src={catalog2}
      alt="Catalog"
      class="rounded-3xl absolute translate-y-36 translate-x-[-180px]"
    />
    <Image
      src={catalog3}
      alt="Catalog"
      class="rounded-3xl absolute translate-y-72"
    />
  </div>
</div>
