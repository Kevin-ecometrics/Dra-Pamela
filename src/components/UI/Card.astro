---
const { title, text, image } = Astro.props
import "@fontsource/poppins"; 
---

    <div>
        <img class="rounded-t-lg" src={image} alt="" />
        <div class="py-5 w-[350px] px-2">
            <p class="mb-2 text-lg md:text-2xl font-semibold text-[#6C5545] font-poppins">{title}</h4>
            <p class="mb-3 font-light text-gray-500 font-poppinsk">{text}</p>
        </div>
    </div>

<style>
    .font-poppins {
        font-family: 'Poppins', sans-serif;
    }
</style>
