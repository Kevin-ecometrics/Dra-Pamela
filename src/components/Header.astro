---
import "@fontsource/italiana";
import "@fontsource/poiret-one";
import { Image } from "astro:assets";
import logo from "@assets/Dra. Pamela especialista en cirugia de cabeza cuello y otorrinolaringologia.png";
import whatsApp from "@assets/Contactanos via WhatsApp para agendar con la Doctora Pamela.svg";
import hero from "@assets/Resultados funcionales y esteticos realizados por la Doctora Pamela postoperatorios de los pacientes.png";
import fondo from "@assets/background_image.png";
import fondo2 from "@assets/background_image2.png";
import fondo3 from "@assets/background_image3.png";
---

<main class="bg-[#798672] text-white">
  <span
    class="flex justify-center md:justify-end px-4 font-poppins md:px-[280px] py-4"
    >Lunes - Sabado: 8:00 am - 9:00 pm Domingo: Cerrado</span
  >
  <nav class="hidden lg:block absolute w-screen z-50">
    <ul
      class="flex justify-between px-[280px] items-center [&>a]:text-2xl font-medium text-xl"
    >
      <li>
        <a href="/" title="Doctora pamela | Personalización Absoluta">
          <Image
            title="La Doctora Pamela garantiza procedimientos con enfoque integral en la cirugía facial y otorrinolaringología "
            src={logo}
            alt="La Doctora Pamela garantiza procedimientos con enfoque integral en la cirugía facial y otorrinolaringología "
          />
        </a>
      </li>

      <a
        target="_blank"
        rel="noopener noreferrer"
        href="https://wa.me/+526644468960/?text=Quiero obtener mas información sobre sus servicios."
        title="Dra Pamela | Contacto vía WhatsApp"
      >
        <li class="flex items-center gap-2">
          <Image
            src={whatsApp}
            alt="Contáctanos vía WhatsApp al 663 439 5024 Con gusto la Doctora Pamela te atenderá"
            title="Contáctanos vía WhatsApp al 663 439 5024 Con gusto la Doctora Pamela te atenderá "
          />WhatsApp
        </li>
      </a>
    </ul>
  </nav>
  <section
    class="text-justify items-center px-4 md:px-0 flex flex-col lg:flex-row"
  >
    <div class="grid grid-cols-1 md:grid-cols-2 px-4">
      <div class="px-4 flex flex-col md:py-24 md:ml-[30%] md:w-[100%]">
        <Image
          src={fondo}
          alt="Tu salud en manos de Dra. Pamela Pérez una profesional que garantiza tu bienestar integral "
          title="Tu salud en manos de Dra. Pamela Pérez una profesional que garantiza tu bienestar integral "
          class="absolute left-0"
        />
        <span
          class="font-italiana text-2xl text-center md:text-start md:text-6xl lg:text-7xl"
        >
          RINOPLASTIA</span
        >
        <span class="font-poiret text-2xl md:text-5xl lg:text-6xl"
          >Personalización absoluta.
        </span>
        <span class="font-poiret text-md md:text-2xl lg:text-3xl"
          >Redefine la armonía de tu rostro, resalta tu singularidad con un
          aspecto natural. Refinamiento del perfil y armonización estética del
          conjunto nasal.
        </span>
      </div>
      <div class="">
        <Image
          src={fondo2}
          alt="Tu salud en manos de Dra. Pamela Pérez una profesional que garantiza tu bienestar integral "
          title="Tu salud en manos de Dra. Pamela Pérez una profesional que garantiza tu bienestar integral "
          class="z-10 right-0 top-0 absolute hidden md:block"
        />
        <Image
          src={fondo3}
          alt="Tu salud en manos de Dra. Pamela Pérez una profesional que garantiza tu bienestar integral "
          title="Tu salud en manos de Dra. Pamela Pérez una profesional que garantiza tu bienestar integral "
          class="z-0 right-32 top-[310px] absolute hidden md:block"
        />

        <Image
          src={hero}
          alt="Los resultados de la Doctora Pamela obtenidos armonizan la estructura facial, dan funcionalidad y realzan la belleza de los pacientes"
          title="Los resultados de la Doctora Pamela obtenidos armonizan la estructura facial, dan funcionalidad y realzan la belleza de los pacientes"
          class="md:absolute right-0 top-0 h-[487px]"
        />
      </div>
    </div>
  </section>
</main>

<style>
  .font-italiana {
    font-family: "Italiana", serif;
  }
  .font-poiret {
    font-family: "Poiret One", cursive;
  }
</style>
